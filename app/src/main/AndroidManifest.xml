<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.incava.xumoqi"
    android:versionCode="5"
    android:versionName="1.4" >
    
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="org.incava.xumoqi.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.incava.xumoqi.QueryActivity"
            android:label="@string/title_activity_query"
            android:parentActivityName="org.incava.xumoqi.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.incava.xumoqi.MainActivity" />
        </activity>
        <activity
            android:name="org.incava.xumoqi.StatusActivity"
            android:label="@string/title_activity_status"
            android:parentActivityName="org.incava.xumoqi.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.incava.xumoqi.MainActivity" />
        </activity>
        <activity
            android:name="org.incava.xumoqi.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
